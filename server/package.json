{
  "name": "server",
  "version": "1.0.0",
  "description": "Resource Server for blogs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node -r tsconfig-paths/register' src/index.ts",
    "start": "node dist/index.js",
    "start:dev": "npm install && npm run dev",
    "lint": "eslint . --ext .ts",
    "test": "jest"
  },
  "dependencies": {
    "@authenticate/database": "file:../database",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "dotenv": "^16.4.7",
    "jest": "^29.6.2",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}